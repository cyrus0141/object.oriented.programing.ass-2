// Define the Student class
class Student {
  String name;
  int age;
  int gradeLevel;

  // Constructor for initializing student properties
  Student(this.name, this.age, this.gradeLevel);

  // Method to print student information
  void printStudentInfo() {
    print("Student Name: $name");
    print("Age: $age");
    print("Grade Level: $gradeLevel\n");
  }
}

// Define the Teacher class
class Teacher {
  String name;
  int age;
  String subject;

  // Constructor for initializing teacher properties
  Teacher(this.name, this.age, this.subject);

  // Method to print teacher information
  void printTeacherInfo() {
    print("Teacher Name: $name");
    print("Age: $age");
    print("Subject: $subject\n");
  }
}

// Third class to create student and teacher objects
class School {
  void run() {
    // Create a student object
    Student student = Student("John Doe", 15, 10);

    // Create a teacher object
    Teacher teacher = Teacher("Mrs. Smith", 35, "Mathematics");

    // Call methods to print information
    student.printStudentInfo();
    teacher.printTeacherInfo();
  }
}

void main() {
  // Create an instance of the School class and run the program
  School school = School();
  school.run();
}

